{
"$schema": "https://vega.github.io/schema/vega-lite/v4.json",
"description": "A simple bar chart with embedded data.",
"title": "Total Deaths for all Players",
"width": 1000, "height": 700,
"data": {"url": "/.netlify/functions/death-data"},
"transform": [
    {"filter": {"field": "Date", "range": ["8-Jun", "30-Dec"]}}
],
"mark": {"type": "arc", "tooltip": {"content": "encoding"}},
"params": [
  {
    "name": "Name",
    "select": {"type": "point", "fields": ["Weapon Color"]},
    "bind": "legend"
    }
    ],
"transform": [{"filter": "datum['Weapon Color'] != 'NC'"}],
"encoding": {
  "theta": {"aggregate": "count", "title": "No. of Deaths"},
  "color": {
  "field": "Weapon Color",
  "type": "nominal",
  "scale": {
  "domain": [
      "White",
      "Green",
      "Blue",
      "Purple",
      "Gold",
      "Mythic",
      "Exotic"
      ],
  "range": [
      "Silver",
      "Green",
      "Blue",
      "Purple",
      "Gold",
      "Yellow",
      "#add8e6"
    ]
    }
    },
  "opacity": {"condition": {"param": "Name", "value": 1}, "value": 0.2}
  },
  "view": {"stroke": null}
}
